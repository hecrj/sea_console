<?php

namespace Sea\Console;

$path = dirname(array_shift($argv)) . '/';
require($path . 'console/components/Loader.php');

$loader = new Components\Loader($path);
$loader->register();

$injector = new Components\Injector();
$injector->set('loader', $loader);

$console = new Console($argv);
$console->init($injector);
